project Minesweeper is

   for Source_Dirs use ("src/", "src/board/");
   for Create_Missing_Dirs use "True";
   for Main use ("minesweeper.adb");

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Minesweeper;
